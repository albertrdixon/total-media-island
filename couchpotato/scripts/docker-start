#!/bin/bash
set -eo pipefail
trap "exit 0" 2 15

echo "==> Starting dnsmasq, I hope you gave me NET_ADMIN..."
dnsmasq --all-servers --local-service

cd $COUCHPOTATO_HOME
git checkout $COUCHPOTATO_CHANNEL
git pull --verbose

. /venv/bin/activate
export PYTHONPATH=$COUCHPOTATO_HOME
exec -a "supervisord" "supervisord" "-c" "/etc/supervisord.conf"
exit 0
